{
    "name": "binsoul/symfony-bundle-i18n",
    "type": "symfony-bundle",
    "description": "Internationalization helpers",
    "keywords": [
        "symfony",
        "bundle",
        "i18n"
    ],
    "homepage": "https://github.com/binsoul/symfony-bundle-i18n",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "s.moeszler@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "binsoul/common-i18n": "*@dev",
        "binsoul/symfony-bundle-doctrine": "*@dev",
        "doctrine/orm": "^2",
        "symfony/config": "^4|^5",
        "symfony/dependency-injection": "^4|^5",
        "symfony/http-kernel": "^4|^5",
        "symfony/intl": "^4|^5",
        "doctrine/doctrine-fixtures-bundle": "^3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "phpstan/phpstan": "^0.11",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\Symfony\\Bundle\\I18n\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\Symfony\\Bundle\\I18n\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src --rules=@Symfony,-yoda_style",
            "php-cs-fixer fix tests --rules=@Symfony,-yoda_style"
        ],
        "analyze": "phpstan analyse -l 7 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
